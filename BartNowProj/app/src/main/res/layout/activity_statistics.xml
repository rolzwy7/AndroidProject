<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goBack"
        android:text="Powrót do panelu głównego"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/circles_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="circles_stats"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/squares_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="squares_num"
        app:layout_constraintTop_toBottomOf="@+id/circles_stats" />

    <TextView
        android:id="@+id/triangles_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="triangles_num"
        app:layout_constraintTop_toBottomOf="@+id/squares_stats" />


</androidx.constraintlayout.widget.ConstraintLayout>