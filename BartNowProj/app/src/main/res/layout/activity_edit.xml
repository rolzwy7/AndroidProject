<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goBack"
        android:text="PowrÃ³t bez zapisywania"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/edit_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Spinner
        android:id="@+id/spinner_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/edit_label" />

    <EditText
        android:id="@+id/feature_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/spinner_id" />

    <Button
        android:id="@+id/button_save_and_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saveAndFinish"
        android:text="Zapisz zmiany"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/feature_edit_text" />


</androidx.constraintlayout.widget.ConstraintLayout>